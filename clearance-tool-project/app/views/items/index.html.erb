<div class="navigate_items">
  <%= form_tag(grouped_items_path, method: :post) do %>
	Select a grouping
    <%= select_tag(:group_selection, options_for_select([
      ['Status', 'status'],
      ['Batch', 'clearance_batch_id'],
      ['Item', nil]
    ])) %>
	  <%= submit_tag("Select", class: "btn btn-xs btn-warning box-shadow--8dp") %>
  <% end %>
</div>

<%# params.inspect %>

<table class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Item #</th>
          <th>Size</th>
          <th>Status</th>
          <th>Color</th>
          <th>Price Sold</th>
          <th>Style name</th>
          <th>Style type</th>
          <th>Clearance Batch #</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.size %></td>
            <td><%= item.status %></td>
            <td><%= item.color%></td>
            <td><%= item.price_sold %></td>
            <td><%= item.style.name %></td>
            <td><%= item.style.type %></td>
            <td><%= item.clearance_batch_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </table>

  <%# link_to 'Export: CSV', items_path(format: "csv"), class: 'btn btn-md
  btn-warning CSV_button' %>
